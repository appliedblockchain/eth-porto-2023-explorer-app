{% extends "layout.jinja" %}

{% block content %}
<h1 class="title">Explore ERC20s</h1>

<div class="card">
  <div class="card-content">
    <div class="content">
      <form action="/transactions/erc20" method="get">
        <div class="field">
          <label class="label" for="block_num">Block Number:</label>
          <div class="control">
            <input class="input" name="block_num" type="number" id="block_num" placeholder="12345" required>
          </div>
        </div>
        <p class="is-small">e.g. 6623564 or 6624619</p>
        <div style="height: 20px"></div>

        <div class="field">
          <div class="control">
            <button class="button is-info" type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}